{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "target": "es2016",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}