{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "target": "es2021",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        // "paths": {
        //     "@/*": [
        //         "./src/*"
        //     ]
        // },
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "**/*.test.ts",
        "node_modules",
        "src/frontend.ts"
    ]
}