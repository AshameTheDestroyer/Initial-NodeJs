{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "target": "es2020",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}